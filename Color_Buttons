		//String label=ae.getActionCommand();
		//frame = null;
		//if (label.equals("RED"))
		//{
		//	frame.setBackground(Color.RED);
		//}
		//if (label.equals("YELLOW"))
		//{
		//	frame.setBackground(Color.YELLOW);
		//}
		//if (label.equals("GREEN"))
		//{
		//	frame.setBackground(Color.GREEN);
		//}
	//}
	
}
